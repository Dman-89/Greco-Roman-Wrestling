<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rounds">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:background">@drawable/rounded_corners_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="headers">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="score_buttons">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="scores">
        <item name="android:gravity">center</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="admonitions">
        <item name="android:gravity">center</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
